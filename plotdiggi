import numpy as np
import matplotlib.pyplot as plt

#Wir wollen jetzt plotten, diggi
name = "bananas-1-2d"
data2 = np.genfromtxt("{}.test.csv".format(name), delimiter = ",")

a=np.array([[0,0]])
b=np.array([[0,0]])
for i in range(np.size(data2,axis=0)):
    if(data2[i,0]<0):
        a=np.append(a,[data2[i,1:].tolist()],axis=0)
    else:
        b=np.append(b,[data2[i,1:].tolist()],axis=0)
plt.scatter(a[:,0],a[:,1],color='red')
plt.scatter(b[:,0],b[:,1],color='blue')
